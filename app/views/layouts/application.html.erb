<!DOCTYPE html>
<html>
<head>
  <title>Po Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="main">
    <% if !flash[:notice].blank? %>
      <p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
    <% elsif !flash[:alert].blank? %>
      <p id="notice" class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-default out' %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
