<%= simple_form_for(@production_schedule) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :production_date, label: 'Production Week', as: :date, start_year: (Date.today - 30).year, end_year: (Date.today + 60).year, order: [:month, :day, :year], selected: Date.today.beginning_of_week - 1 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
