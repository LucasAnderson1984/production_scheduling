<tr>
  <td><%= production_schedule.production_date.strftime('%m/%d/%Y') %></td>
  <td><%= number_with_precision(production_schedule.total_tons, precision: 0, delimiter: ',') %></td>
  <% if production_schedule.production_formulas.count == 0 %>
    <td><%= link_to 'Add Formulas', new_production_formula_path(production_schedule_id: production_schedule.id) %></td>
  <% else %>
    <td><%= link_to 'Show Formulas', production_formulas_url(production_schedule_id: production_schedule.id) %></td>
  <% end %>
  <td><%= link_to 'Show', production_schedule %></td>
  <td><%= link_to 'Edit', edit_production_schedule_path(production_schedule) %></td>
  <td><%= link_to 'Destroy', production_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
